{
  "name": "novelforge-monorepo",
  "private": true,
  "version": "2.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:novelforge": "pnpm --filter @novelforge/frontend dev",
    "dev:storyscore": "pnpm --filter @novelforge/storyscore dev",
    "dev:backend": "pnpm --filter @novelforge/backend dev",
    "build": "pnpm -r build",
    "build:novelforge": "pnpm --filter @novelforge/frontend build",
    "build:storyscore": "pnpm --filter @novelforge/storyscore build",
    "build:backend": "pnpm --filter @novelforge/backend build",
    "start": "pnpm --filter @novelforge/frontend start",
    "start:novelforge": "pnpm --filter @novelforge/frontend start",
    "start:backend": "pnpm --filter @novelforge/backend start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  }
}
