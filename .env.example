# NovelForge Frontend Environment Variables
# Copy this file to .env.local and update values as needed

# Backend API URL
# CRITICAL: This URL must be allowed in the CSP connect-src directive in next.config.js
# The CSP is automatically built from this URL - no manual sync required
# Local development: http://localhost:3001
# Production: https://novelforge-backend-production.up.railway.app
NEXT_PUBLIC_API_URL=http://localhost:3001

# Environment
NODE_ENV=development

# Bundle Analysis (optional)
# Set to 'true' to generate bundle analysis report
ANALYZE=false
