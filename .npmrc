# Ensure React and related packages are hoisted to the root
# This prevents duplicate React instances in monorepo which causes Error #310
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=next

# Shamefully hoist all packages for better compatibility
shamefully-hoist=true

# Strict peer dependencies
strict-peer-dependencies=false
