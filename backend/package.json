{
  "name": "novelforge-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp src/db/schema.sql dist/db/ && cp -r src/db/migrations dist/db/",
    "start": "node dist/server.js",
    "cli": "tsx src/cli.ts",
    "migrate": "tsx src/db/migrate.ts",
    "hash-password": "tsx scripts/hash-password.ts",
    "test": "jest --config jest.config.cjs",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:watch": "jest --config jest.config.cjs --watch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@sentry/node": "^10.36.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pdfkit": "^0.17.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.10",
    "@types/pdfkit": "^0.17.4",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
